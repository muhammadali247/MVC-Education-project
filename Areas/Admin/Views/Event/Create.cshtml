@using EduHome.Areas.Admin.ViewModels.EventViewModel;


@{
    ViewData["Title"] = "Create";
}

@model CreateEventViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create product</h4>
                    <p class="card-description">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Image">Image</label>
                                <input asp-for="Image" class="form-control" placeholder="Image" accept="image/*">
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Time">Time</label>
                                <input asp-for="Time" class="form-control" placeholder="Time">
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Venue">Venue</label>
                                <input asp-for="Venue" class="form-control" placeholder="Venue">
                                <span asp-validation-for="Venue" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea id="editor" asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="SpeakerId">Speakers</label>
                                <select class="form-control" asp-for="@Model.SpeakerId" asp-items="@ViewBag.Speakers" multiple>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Create</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>