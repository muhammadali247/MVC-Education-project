@using EduHome.Areas.Admin.ViewModels.BlogViewModel;


@{
    ViewData["Title"] = "Create";
}

@model CreateBlogViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create product</h4>
                    <p class="card-description">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input asp-for="Image" class="form-control" placeholder="Image" accept="image/*">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="CommentCount">Comment Count</label>
                            <input asp-for="CommentCount" class="form-control" placeholder="Comment count">
                            <span asp-validation-for="CommentCount" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
