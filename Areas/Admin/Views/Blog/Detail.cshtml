@{
    ViewData["Title"] = "Detail";
}

@model Blog

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div style="border: 1px dashed black; padding: 20px">
                <div>
                    <img src="~/assets/img/blog//@Model.Image" style="max-width: 25%; margin-bottom: 10px"></img>
                </div>
                <div style="display:flex; align-items: center">
                    <h4>Title: <span style="font-weight:300; margin-left: 5px">@Model.Title</span></h4>
                </div>
                <div style="display:flex; align-items: center">
                    <h4>Description: <span style="font-weight:300; margin-left: 5px">@Model.Description</span></h4>
                </div>
                <div style="display:flex; align-items: center">
                    <h4>Comment Count: <span style="font-weight:300; margin-left: 5px">@Model.CommentCount</span></h4>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
