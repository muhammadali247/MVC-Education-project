    
@{
    ViewData["Title"] = "Index";
}

@model List<Item>

<h1>Items</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
            <a href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
    }
</div>
