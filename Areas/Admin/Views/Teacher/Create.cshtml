@using EduHome.Areas.Admin.ViewModels.TeacherViewModel;


@{
    ViewData["Title"] = "Create";
}

@model CreateTeacherViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create teacher</h4>
                    <p class="card-description">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Image">Image</label>
                                <input asp-for="Image" class="form-control" placeholder="Image" accept="image/*">
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Duty">Duty</label>
                                <input asp-for="Duty" class="form-control" placeholder="Duty">
                                <span asp-validation-for="Duty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="About">About</label>
                                <input asp-for="About" class="form-control" placeholder="About">
                                <span asp-validation-for="About" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Degree">Degree</label>
                                <input asp-for="Degree" class="form-control" placeholder="Degree">
                                <span asp-validation-for="Degree" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Experience">Experience</label>
                                <input asp-for="Experience" class="form-control" placeholder="Experience">
                                <span asp-validation-for="Experience" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Faculty">Faculty</label>
                                <input asp-for="Faculty" class="form-control" placeholder="Faculty">
                                <span asp-validation-for="Faculty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input asp-for="Mail" class="form-control" placeholder="Mail">
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Phone number</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Skype">Skype</label>
                                <input asp-for="Skype" class="form-control" placeholder="Skype">
                                <span asp-validation-for="Skype" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="SpeakerId">Social media icons</label>
                                <select class="form-control" asp-for="@Model.SocialMediaId" asp-items="@ViewBag.SocialMedias" multiple>
                                    @*@foreach (Category category in ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }*@
                                </select>
                                <label for="SpeakerId">Skills</label>
                                <select class="form-control" asp-for="@Model.SkillId" asp-items=" ViewBag.skills" multiple>
                                    @*@foreach (Category category in ViewBag.Categories)
                                    {
                                    <option value="@category.Id">@category.Name</option>
                                    }*@
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Create</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>