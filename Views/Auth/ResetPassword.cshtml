@using EduHome.ViewModels.AuthViewModel;

@{
    ViewData["Title"] = "ResetPassword";
}

@model ResetPasswordViewModel

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Reset password</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset password</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    <input asp-for="NewPassword" placeholder="New password" />
                                </div>
                                <div>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    <input asp-for="ConfirmNewPassword" placeholder="Confirm new password" />
                                </div>
                                <button type="submit" class="default-btn">Reset password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->

