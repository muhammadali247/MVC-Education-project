@using EduHome.ViewModels.AccountViewModel;

@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                                    <input asp-for="Fullname" placeholder="Fullname" />
                                </div>
                                <div>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <input asp-for="Username" placeholder="Username" />
                                </div>
                                <div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input asp-for="Email" placeholder="Email" />
                                </div>
                                <div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input asp-for="Password" placeholder="Password" />
                                </div>
                                <div>
                                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                    <input asp-for="PasswordConfirm" placeholder="Password Confirm" />
                                </div>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end --> 